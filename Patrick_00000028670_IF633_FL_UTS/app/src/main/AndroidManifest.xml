<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uts_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTS_Project"
        >
        <activity android:name=".MainActivity"
                  android:label="0x0 Music Player">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".ProfileActivity"
            android:label="My Profile"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".SongListActivity"
            android:label="Songs List"
            android:parentActivityName=".LoginActivity">

        </activity>
        <activity android:name=".ProfileLoginActivity"
            android:label="My Profile"
            android:parentActivityName=".SongListActivity">
        </activity>

    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>